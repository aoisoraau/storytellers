        function spin() {
            // éš¨æ©ŸæŠ½å–
            const t = getRandom(data.time);
            const p = getRandom(data.person);
            const pl = getRandom(data.place);
            const a = getRandom(data.action);

            // æ›´æ–°ç•«é¢ (Emoji + æ–‡å­— + æ‹¼éŸ³)
            // æ³¨æ„ï¼šé€™è£¡å°åœ°é» (Place) åšäº†ç‰¹æ®Šè™•ç†ï¼Œå¢åŠ äº†ã€Œåœ¨ã€ (zoi6)
            updateCard('e1', 't1', 'p1', t);
            updateCard('e2', 't2', 'p2', p);
            
            // åœ°é»ç‰¹æ®Šè™•ç†ï¼šé¡¯ç¤º "åœ¨ + åœ°é»"
            document.getElementById('e3').innerText = pl.e;
            document.getElementById('t3').innerText = "åœ¨" + pl.t;
            document.getElementById('p3').innerText = "zoi6 " + pl.p;

            updateCard('e4', 't4', 'p4', a);

            // çµ„åˆå¥å­
            // çµæ§‹ï¼šæ™‚é–“ + äººç‰© + åœ¨åœ°é» + äº‹æƒ…
            const sentence = `${t.t}ï¼Œ${p.t}åœ¨${pl.t}${a.t}ã€‚`;
            document.getElementById('result').innerText = sentence;

            // èªéŸ³æœ—è®€
            speak(sentence);
        }

        function getRandom(arr) {
            return arr[Math.floor(Math.random() * arr.length)];
        }

        function updateCard(eid, tid, pid, obj) {
            document.getElementById(eid).innerText = obj.e;
            document.getElementById(tid).innerText = obj.t;
            document.getElementById(pid).innerText = obj.p;
        }

        function speak(text) {
            if ('speechSynthesis' in window) {
                window.speechSynthesis.cancel();
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = 'zh-HK'; // ç²µèªç™¼éŸ³
                utterance.rate = 0.8;
                window.speechSynthesis.speak(utterance);
            }
        }
